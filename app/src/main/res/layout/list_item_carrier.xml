<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            type="com.turtle.amatda.presentation.utilities.extensions.ExtensionsKt" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="editClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="deleteClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="carrierAndGetHasPocketNum"
            type="com.turtle.amatda.domain.model.CarrierAndGetHasPocketNum"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/amatda_main_transparent_4">

            <TextView
                android:id="@+id/tv_carrier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text='@{@string/common_name + " : " + carrierAndGetHasPocketNum.carrier.name}'
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_carrier_type"
                tools:text="가방이름이 표시됩니다" />

            <TextView
                android:id="@+id/tv_carrier_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text='@{@string/common_type + " : " + carrierAndGetHasPocketNum.carrier.type + " - " + carrierAndGetHasPocketNum.carrier.size}'
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/tv_carrier_has_pocket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_carrier_has_pocket"
                tools:text="가방 타입이 표시 됩니다" />

            <TextView
                android:id="@+id/tv_carrier_has_pocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text='@{carrierAndGetHasPocketNum.pocketSize == 0 ? @string/carrier_pocket_is_empty : String.valueOf(carrierAndGetHasPocketNum.pocketSize)}'
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/btn_carrier_delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_carrier_type"
                tools:text="가방의 주머니 개수가 표시됩나다" />

            <View
                android:id="@+id/view_line_between_about_and_click"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/amatda_main_transparent_50"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tv_carrier_has_pocket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_carrier_edit"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_carrier_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_edit"
                android:onClick="@{editClickListener}"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_carrier_delete"
                app:layout_constraintTop_toBottomOf="@id/view_line_between_about_and_click" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_carrier_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_delete"
                android:layout_marginEnd="5dp"
                android:onClick="@{deleteClickListener}"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_between_about_and_click" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>