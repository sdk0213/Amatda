<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import
            type="com.turtle.amatda.presentation.utilities.extensions.ExtensionsKt" />

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="editClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="deleteClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="carrierAndGetHasPocketNum"
            type="com.turtle.amatda.domain.model.CarrierAndGetHasPocketNum"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/amatda_main_transparent_4">

            <TextView
                android:id="@+id/tv_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="25sp"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_trip_course"
                tools:text="OO과의 여행" />

            <TextView
                android:id="@+id/tv_trip_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/tv_trip_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_trip_name"
                tools:text="지역1 -> 지역2 -> 지역3" />

            <TextView
                android:id="@+id/tv_trip_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/ratingbar_trip_rating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_trip_course"
                tools:text="0박 0일\n(00/00/00 ~ 00/00/00)" />

            <RatingBar
                android:id="@+id/ratingbar_trip_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:textSize="25sp"
                android:numStars="5"
                android:rating="3"
                android:stepSize="0.5"
                android:progressTint="@color/amatda_main"
                app:layout_constraintBottom_toTopOf="@id/view_line_between_about_and_click"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_trip_date"
                tools:text="레이팅바가 들어감"
                style="@style/Widget.AppCompat.RatingBar.Indicator"/>

            <View
                android:id="@+id/view_line_between_about_and_click"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/amatda_main_transparent_50"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/ratingbar_trip_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btn_trip_edit"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_trip_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_edit"
                android:onClick="@{editClickListener}"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_trip_delete"
                app:layout_constraintTop_toBottomOf="@id/view_line_between_about_and_click" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_trip_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_delete"
                android:layout_marginEnd="5dp"
                android:onClick="@{deleteClickListener}"
                app:cornerRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_between_about_and_click" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>