<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_dialog_show_yes_or_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_normal_margin_start_and_end"
            android:layout_marginTop="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginEnd="@dimen/view_normal_margin_start_and_end"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/btn_dialog_show_yes_or_no_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="내용이 삽입 됩니다." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_show_yes_or_no_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_normal_margin_start_and_end"
            android:layout_marginTop="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="@dimen/view_normal_margin_top_and_bottom"
            android:text="@string/common_button_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_dialog_show_yes_or_no_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_show_yes_or_no" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_show_yes_or_no_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/view_normal_margin_top_and_bottom"
            android:layout_marginEnd="@dimen/view_normal_margin_start_and_end"
            android:layout_marginBottom="@dimen/view_normal_margin_top_and_bottom"
            android:text="@string/common_button_checked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_dialog_show_yes_or_no_cancel"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_show_yes_or_no" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>