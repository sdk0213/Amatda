<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.turtle.amatda.presentation.view.carrier_item.CarrierItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/itemContainer">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_baseline_menu_24"
                app:menu="@menu/app_bar_carrier_item"
                app:title="@string/menu_my_carrier"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/itemContainer"
            android:onClick="@{ () -> viewModel.itemIsUnClicked()}"
            app:layout_constraintBottom_toTopOf="@id/item_name_view"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_no_color"
                android:visibility="@{viewModel.isItemClicked ? View.VISIBLE : View.INVISIBLE}"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/edit_speech_bubble"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_item"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{ () -> viewModel.removeItem(viewModel.itemIdCurrentClicked)}"
                    android:text="삭제"
                    android:textSize="@dimen/carrier_item_edit_text"
                    android:letterSpacing="0"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_baseline_delete_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/change_item_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_item_size"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="@string/item_edit_tooltip_resize"
                    android:textSize="@dimen/carrier_item_edit_text"
                    android:letterSpacing="0"
                    android:onClick="@{() -> viewModel.isItemResizeClicked ? viewModel.itemResizeIsUnClicked() : viewModel.itemResizeIsClicked()}"
                    android:backgroundTint="@{viewModel.isItemResizeClicked ? @color/material_a700 : @color/amatda_main}"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_baseline_zoom_out_map_36"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/delete_item"
                    app:layout_constraintEnd_toStartOf="@id/change_item_count"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_item_count"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="개수"
                    android:textSize="@dimen/carrier_item_edit_text"
                    android:letterSpacing="0"
                    android:onClick="@{() -> viewModel.isItemRecountClicked ? viewModel.itemRecountIsUnClicked() : viewModel.itemRecountIsClicked()}"
                    android:backgroundTint="@{viewModel.isItemRecountClicked ? @color/material_a700 : @color/amatda_main}"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_baseline_all_inbox_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/change_item_size"
                    app:layout_constraintEnd_toStartOf="@id/change_item_color"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/change_item_color"
                    android:layout_width="76dp"
                    android:layout_height="wrap_content"
                    android:text="색깔"
                    android:textSize="@dimen/carrier_item_edit_text"
                    android:letterSpacing="0"
                    android:onClick="@{() -> viewModel.isItemRecolorClicked ? viewModel.itemRecolorIsUnClicked() : viewModel.itemRecolorIsClicked()}"
                    android:backgroundTint="@{viewModel.isItemRecolorClicked ? @color/material_a700 : @color/amatda_main}"
                    app:cornerRadius="0dp"
                    app:icon="@drawable/ic_baseline_color_lens_24"
                    app:iconGravity="top"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/change_item_count"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/edit_speech_bubble"
                android:layout_width="50dp"
                android:layout_height="15dp"
                android:background="@drawable/triangle"
                android:visibility="@{viewModel.isItemSpeechBubbleVisible ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_item_view"
                app:layout_constraintBottom_toTopOf="@id/edit_decrease_width"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_decrease_width"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isItemResizeClicked ? View.VISIBLE : View.INVISIBLE}"
                android:onClick="@{() -> viewModel.decreaseWidth(25)}"
                android:backgroundTint="@color/material_a700"
                app:icon="@drawable/ic_baseline_minus_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_speech_bubble" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_increase_width"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isItemResizeClicked ? View.VISIBLE : View.INVISIBLE}"
                android:onClick="@{() -> viewModel.increaseWidth(25)}"
                android:backgroundTint="@color/material_a700"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toEndOf="@id/edit_decrease_width"
                app:layout_constraintTop_toBottomOf="@id/edit_speech_bubble" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_decrease_height"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isItemResizeClicked ? View.VISIBLE : View.INVISIBLE}"
                android:onClick="@{() -> viewModel.decreaseHeight(25)}"
                android:backgroundTint="@color/material_a700"
                app:icon="@drawable/ic_baseline_minus_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_increase_width" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/edit_increase_height"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.isItemResizeClicked ? View.VISIBLE : View.INVISIBLE}"
                android:onClick="@{() -> viewModel.increaseHeight(25)}"
                android:backgroundTint="@color/material_a700"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintStart_toEndOf="@id/edit_decrease_height"
                app:layout_constraintTop_toBottomOf="@id/edit_increase_width" />

            <ImageView
                android:id="@+id/carrier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@string/cttdcrp_carrier"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_item_count_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_no_color"
                android:visibility="@{viewModel.isItemRecountClicked ? View.VISIBLE : View.INVISIBLE}"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_decrease_height"
                app:layout_constraintBottom_toTopOf="@id/edit_item_color_view">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_count_increase"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:onClick="@{ () -> viewModel.recountItem(false)}"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/material_a700"
                    app:icon="@drawable/ic_baseline_arrow_left_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item_count" />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/item_count_oval"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:includeFontPadding="false"
                    tools:text="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_count_increase"
                    app:layout_constraintEnd_toStartOf="@id/item_count_decrease"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_count_decrease"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:onClick="@{ () -> viewModel.recountItem(true)}"
                    android:backgroundTint="@color/material_a700"
                    app:icon="@drawable/ic_baseline_arrow_right_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_count"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/edit_item_color_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_no_color"
                android:visibility="@{viewModel.isItemRecolorClicked ? View.VISIBLE : View.INVISIBLE}"
                android:clickable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_item_count_view">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_white"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:background="@drawable/item_color_white"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_white)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/item_color_red"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_red"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:background="@drawable/item_color_red"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_red)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_white"
                    app:layout_constraintEnd_toStartOf="@id/item_color_orange"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_orange"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:background="@drawable/item_color_orange"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_orange)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_red"
                    app:layout_constraintEnd_toStartOf="@id/item_color_yellow"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_yellow"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:background="@drawable/item_color_yellow"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_yellow)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_orange"
                    app:layout_constraintEnd_toStartOf="@id/item_color_green"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_green"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:background="@drawable/item_color_green"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_green)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_yellow"
                    app:layout_constraintEnd_toStartOf="@id/item_color_blue"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_blue"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:background="@drawable/item_color_blue"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_blue)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_green"
                    app:layout_constraintEnd_toStartOf="@id/item_color_dark_blue"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_dark_blue"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:background="@drawable/item_color_dark_blue"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_dark_blue)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_blue"
                    app:layout_constraintEnd_toStartOf="@id/item_color_yellow"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_purple"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:background="@drawable/item_color_purple"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_purple)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_dark_blue"
                    app:layout_constraintEnd_toStartOf="@id/item_color_black"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/item_color_black"
                    android:layout_width="@dimen/carrier_item_color"
                    android:layout_height="@dimen/carrier_item_color"
                    android:background="@drawable/item_color_black"
                    android:layout_marginStart="@dimen/carrier_item_color_margin"
                    android:onClick="@{() -> viewModel.updateColor(@color/rainbow_black)}"
                    app:backgroundTint="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/item_color_purple"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_name_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="선크림"
            android:hint="@{viewModel.isItemClicked ? @string/edit_item_label : @string/add_item_label}"
            app:startIconDrawable="@{viewModel.isItemClicked ? @drawable/ic_baseline_drive_file_rename_outline_24 : @drawable/ic_baseline_unarchive_24}"
            app:startIconContentDescription="물건"
            app:endIconMode="custom"
            app:endIconDrawable="@{viewModel.isItemClicked ? @drawable/ic_baseline_check_circle_24 : @drawable/ic_baseline_add_box_24}"
            app:layout_constraintTop_toBottomOf="@id/itemContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:textColorHint="@color/amatda_main" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>