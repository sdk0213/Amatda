<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Theme.Amatda" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorPrimary">@color/amatda_main</item>
        <item name="colorPrimaryVariant">@color/amatda_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.Amatda.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab"> <!-- Tab 텍스트 사이즈 -->
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@color/white_ish</item>
        <item name="searchVoiceIcon">@drawable/ic_baseline_keyboard_voice_24</item>
        <item name="searchCloseIcon">@drawable/ic_baseline_close_24</item>
        <item name="searchBackIcon">@drawable/ic_baseline_keyboard_backspace_24</item>
        <item name="searchSuggestionBackground">@color/white_ish</item>
        <item name="historyIcon">@drawable/ic_baseline_history_24</item>
        <item name="suggestionIcon">@drawable/ic_baseline_search_main_color_24</item>
        <item name="listTextColor">@color/black</item>
        <item name="searchBarHeight">?attr/actionBarSize</item>
        <item name="voiceHintPrompt">@string/item_search_hint</item>
        <item name="voiceIconEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/amatda_main_transparent_50</item>
        <item name="android:hint">@string/item_search_hint</item>
        <item name="android:inputType">textCapWords</item>
    </style>

</resources>
